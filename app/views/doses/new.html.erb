<h1>Add a new dose</h1>
<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.association :ingredient %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<%= link_to 'Back to the list', cocktails_path %>
